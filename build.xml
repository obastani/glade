<project default="build">
  <target name="build">
    <mkdir dir="classes"/>
    <javac srcdir="src" destdir="classes" debug="on"/>
    <jar destfile="glade.jar" basedir="classes">
      <manifest>
        <attribute name="Main-Class" value="glade.main.Main"/>
      </manifest>
    </jar>
  </target>
  <target name="clean">
    <delete dir="classes"/>
    <delete file="glade.jar"/>
  </target>
</project>
